<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <!-- A CardView that contains a TextView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/deal_1"
                android:layout_height="380dp"
                android:layout_margin="8dp"
                android:layout_width="345dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/bg"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/thumbnailDivider1"
                        android:layout_alignTop="@+id/title1" />

                    <ImageView
                        android:id="@+id/thumbnail1"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/deal1"
                        android:layout_height="175dp" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail1"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Fresh Chicken Fillet Roll"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Was €2.99"
                        android:id="@+id/previousCost1"
                        android:layout_marginStart="14dp"
                        android:layout_below="@+id/title1"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:id="@+id/addDealToListBtn1"
                        android:text="Add to shopping list"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonshape"
                        android:layout_width="280dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="NOW"
                        android:id="@+id/nowCostLabel1"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal|bold"
                        android:layout_below="@+id/previousCost1"
                        android:layout_alignStart="@+id/previousCost1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="€1.99"
                        android:id="@+id/nowCost1"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal|bold"
                        android:textAllCaps="false"
                        android:layout_alignBaseline="@+id/nowCostLabel1"
                        android:layout_alignBottom="@+id/nowCostLabel1"
                        android:layout_alignStart="@+id/addDealToListBtn1"
                        android:layout_marginStart="30dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/deal_2"
                android:layout_gravity="center"
                android:layout_width="345dp"
                card_view:cardCornerRadius="4dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_height="380dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/bg"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/thumbnailDivider2"
                        android:layout_alignTop="@+id/title2" />

                    <ImageView
                        android:id="@+id/thumbnail2"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@drawable/deal2"
                        android:layout_height="175dp" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail2"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Coca Cola (6x330ml)"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Was €4.29"
                        android:id="@+id/previousCost2"
                        android:layout_marginStart="14dp"
                        android:layout_below="@+id/title2"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="NOW"
                        android:id="@+id/nowCostLabel2"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal|bold"
                        android:layout_below="@+id/previousCost2"
                        android:layout_alignStart="@+id/previousCost2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="€2.99"
                        android:id="@+id/nowCost2"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal|bold"
                        android:textAllCaps="false"
                        android:layout_alignBaseline="@+id/nowCostLabel2"
                        android:layout_alignBottom="@+id/nowCostLabel2"
                        android:layout_alignStart="@+id/addDealToListBtn2"
                        android:layout_marginStart="30dp" />

                    <Button
                        android:id="@+id/addDealToListBtn2"
                        android:text="Add to shopping list"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonshape"
                        android:layout_width="280dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="25dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/deal_3"
                android:layout_gravity="center"
                android:layout_width="345dp"
                card_view:cardCornerRadius="4dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="380dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/bg"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/thumbnailDivider3"
                        android:layout_alignTop="@+id/title3" />

                    <ImageView
                        android:id="@+id/thumbnail3"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@drawable/deal3"
                        android:layout_height="175dp" />

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail3"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Ben and Jerrys ice cream range"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="Was €5.42"
                        android:id="@+id/previousCost3"
                        android:layout_marginStart="14dp"
                        android:layout_below="@+id/title3"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="NOW"
                        android:id="@+id/nowCostLabel3"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal|bold"
                        android:layout_below="@+id/previousCost3"
                        android:layout_alignStart="@+id/previousCost3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="€3.00"
                        android:id="@+id/nowCost3"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal|bold"
                        android:textAllCaps="false"
                        android:layout_alignBaseline="@+id/nowCostLabel3"
                        android:layout_alignBottom="@+id/nowCostLabel3"
                        android:layout_alignStart="@+id/addDealToListBtn3"
                        android:layout_marginStart="30dp" />

                    <Button
                        android:id="@+id/addDealToListBtn3"
                        android:text="Add to shopping list"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonshape"
                        android:layout_width="280dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="25dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- A CardView that contains a TextView -->

    <!-- A CardView that contains a TextView -->

</LinearLayout>