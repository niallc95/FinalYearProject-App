<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        app:srcCompat="@drawable/logo_splash"
        android:id="@+id/logoImg"
        android:layout_width="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_height="70dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="150dp"
        android:id="@+id/loginFieldsLayout">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/login_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:layout_weight="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/email_address"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/login_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerBottom"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp" />

        <View
            android:layout_width="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerTop"
            android:layout_alignParentTop="true"
            android:layout_height="1dp" />

        <View
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerRight"
            android:layout_alignParentRight="true"
            android:layout_width="1dp" />

        <View
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerLeft"
            android:layout_alignParentLeft="true"
            android:layout_width="1dp" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"
        android:text="Login"
        android:textColor="@color/white"
        android:id="@+id/loginBtn" />

    <TextView
        android:text="New to Hoarder?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newLabel"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="7dp"/>

    <View
        android:background="@color/lightGrey"
        android:id="@+id/signupLinkDivider"
        android:layout_height="1dp"
        android:layout_width="match_parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape2"
        android:text="Create a Hoarder account"
        android:textColor="@color/colorPrimary"
        android:id="@+id/signupLink" />

</LinearLayout>