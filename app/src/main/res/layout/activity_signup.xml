<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/loginFieldsLayout"
        android:layout_height="320dp">

        <!--  First Name Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/fnameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="2dp">

            <EditText android:id="@+id/input_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="First Name"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Last Name Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lnameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/fnameLayout">

            <EditText android:id="@+id/input_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Last Name"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/lnameLayout">
            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email Address"
                android:backgroundTint="@color/colorPrimary"/>

        </android.support.design.widget.TextInputLayout>

        <!-- Phone Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/emailLayout">

            <EditText android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="Mobile Number"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"/>
        </android.support.design.widget.TextInputLayout>


        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/phoneLayout">

            <EditText android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:backgroundTint="@color/colorPrimary"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerBottom"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp" />

        <View
            android:layout_width="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerTop"
            android:layout_alignParentTop="true"
            android:layout_height="1dp" />

        <View
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerRight"
            android:layout_alignParentRight="true"
            android:layout_width="1dp" />

        <View
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:id="@+id/loginLayoutDividerLeft"
            android:layout_alignParentLeft="true"
            android:layout_width="1dp" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:id="@+id/signupBtn" />

    <TextView
        android:text="Already have an Account?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginLabel"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="7dp"/>

    <View
        android:background="@color/lightGrey"
        android:id="@+id/signupLinkDivider"
        android:layout_height="1dp"
        android:layout_width="match_parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonshape2"
        android:text="Login"
        android:textColor="@color/colorPrimary"
        android:id="@+id/loginLink" />

</LinearLayout>