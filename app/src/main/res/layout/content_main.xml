<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="software_project.com.hoarder.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:id="@+id/divider2" />

    <Button
        android:id="@+id/checkoutBtn"
        android:text="Proceed to Checkout"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/CostText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="350dp" />

    <TextView
        android:text="(0 items):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/contentTxt"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/CostText" />

    <TextView
        android:text="Cart Subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CostText"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkoutBtn" />

    <TextView
        android:text="Cart Subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkoutBtn" />

    <TextView
        android:text="â‚¬0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTxt"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/contentTxt" />

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"
        android:id="@+id/divider3"
        android:layout_below="@+id/cartView"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="3dp"
        android:id="@+id/view"
        android:layout_below="@+id/divider3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <Button
        android:text="Clear Cart"
        android:layout_width="wrap_content"
        android:id="@+id/clearBtn"
        android:textColor="@color/white"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/divider3"
        android:layout_alignEnd="@+id/checkoutBtn"
        android:textSize="10sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp" />

    <Button
        android:text="Add to List"
        android:layout_width="wrap_content"
        android:id="@+id/listAddBtn"
        android:textColor="@color/white"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/divider3"
        android:layout_alignStart="@+id/cartView" />

    <ListView
        android:id="@+id/cartView"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_below="@+id/divider2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
