<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="software_project.com.hoarder.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <RelativeLayout
        android:layout_height="350dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="20dp">

        <ImageView
            app:srcCompat="@drawable/ic_nav_profile"
            android:layout_marginTop="16dp"
            android:id="@+id/icon_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/scanFormat"
            android:layout_height="40dp"
            android:layout_width="160dp"
            android:layout_alignTop="@+id/icon_view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <TextView
            android:layout_height="40dp"
            android:id="@+id/scanContent"
            android:layout_alignBottom="@+id/icon_view"
            android:layout_alignStart="@+id/scanFormat"
            android:layout_width="160dp" />

        <Button
            android:layout_height="80dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/cartBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/icon_view"
            android:layout_width="140dp"
            android:background="@color/white"
            android:elevation="14dp"
            />

        <Button
            android:id="@+id/listBtn"
            android:layout_height="80dp"
            android:layout_width="140dp"
            android:layout_alignBottom="@+id/cartBtn"
            android:layout_alignEnd="@+id/scanContent"
            android:background="@color/white"
            android:elevation="14dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_marginBottom="17dp"
            android:id="@+id/requestText"
            android:layout_height="100dp"
            android:layout_above="@+id/cartBtn"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"/>

    </RelativeLayout>
</RelativeLayout>
