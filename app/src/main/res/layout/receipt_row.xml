<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:scaleType="centerCrop"
    android:layout_height="110dp">

    <TextView
        android:text="1246577"
        android:id="@+id/refNoTxt"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/refNoLabel"
        android:layout_alignBottom="@+id/refNoLabel"
        android:layout_toEndOf="@+id/refNoLabel" />

    <View
        android:layout_width="match_parent"
        android:background="@color/lightGrey"
        android:id="@+id/receipt_row_divider"
        android:layout_height="1dp"
        android:layout_below="@+id/refNoLabel"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/bg"
        android:id="@+id/receipts_divider"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:text="Reference Number:"
        android:id="@+id/refNoLabel"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_marginStart="9dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:text="time"
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginEnd="13dp"
        android:layout_alignBaseline="@+id/refNoTxt"
        android:layout_alignBottom="@+id/refNoTxt"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:elevation="8dp"
        android:background="@drawable/bag"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iconLayoutReceiptRow"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/receipt_row_divider"
        android:layout_alignStart="@+id/refNoLabel"
        android:layout_marginTop="8dp">


        <TextView
            android:text="4"
            android:id="@+id/itemCountTxt"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="Total Cost:"
        android:id="@+id/totalCostLabel"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_marginEnd="14dp"
        android:layout_alignBottom="@+id/iconLayoutReceiptRow"
        android:layout_toStartOf="@+id/totalCostTxt" />

    <TextView
        android:text="â‚¬50.00"
        android:id="@+id/totalCostTxt"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_alignBaseline="@+id/totalCostLabel"
        android:layout_alignBottom="@+id/totalCostLabel"
        android:layout_toEndOf="@+id/refNoTxt" />

    <TextView
        android:text="date"
        android:id="@+id/dateTxt"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_above="@+id/totalCostLabel"
        android:layout_alignStart="@+id/totalCostLabel"
        android:layout_marginBottom="9dp" />

</RelativeLayout>